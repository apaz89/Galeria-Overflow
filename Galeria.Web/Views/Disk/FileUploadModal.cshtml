@model Galeria.Web.Models.DiskContentModel

<script type="text/javascript">
    function getClientDateTime() {
        var textBox = document.getElementById("clientDateTime");

        var now = new Date();
        var year = "" + now.getFullYear();
        var month = "" + (now.getMonth() + 1); if (month.length == 1) { month = "0" + month; }
        var day = "" + now.getDate(); if (day.length == 1) { day = "0" + day; }
        var hour = "" + now.getHours(); if (hour.length == 1) { hour = "0" + hour; }
        var minute = "" + now.getMinutes(); if (minute.length == 1) { minute = "0" + minute; }
        var second = "" + now.getSeconds(); if (second.length == 1) { second = "0" + second; }
        textBox.value = year + "-" + month + "-" + day + " " + hour + ":" + minute + ":" + second;
    }
</script>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3>File Upload</h3>
</div>
    <div class="control-group modal-body">
       @using(@Html.BeginForm("FileUpload","Disk", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
        <label class="control-label">Select a file: </label>
        <input type="file" name="fileControl"/>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" onclick="getClientDateTime();" >Upload</button>
                <a class="btn btn-danger" href="#" data-dismiss="modal">Close</a>
            </div>
           <input type="text" class="hidden" id="clientDateTime" name="clientDateTime" value=""/>
        }
    </div>